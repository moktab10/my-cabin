<div class="row justify-content-center">
  <div class="col-md-4 col-offset-4 text-center">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name,
      autofocus: true,
      input_html: { autocomplete: "First_name" }, class: "form-control", placeholder: "First name", label: false %>
      <%= f.input :last_name,
      autofocus: true,
      input_html: { autocomplete: "Last_name" }, class: "form-control", placeholder: "Last name", label: false %>
      <%= f.input :email, required: true, autofocus: true, class: "form-control", placeholder: "Email", label: false %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :password,
      hint: "Laissez-le vide si vous ne voulez pas le changer",
      required: false,
      input_html: { autocomplete: "new-password" }, class: "form-control", placeholder: "Nouveau mot de passe", label: false %>
      <%= f.input :password_confirmation,
      required: false,
      input_html: { autocomplete: "new-password" }, class: "form-control", placeholder: "Confirmation mot de passe", label: false %>
      <%= f.input :current_password,
      hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
      required: true,
      input_html: { autocomplete: "current-password" }, class: "form-control", placeholder: "Mot de passe actuel", label: false %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Enregisterer", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
