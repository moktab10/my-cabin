  <div class="row justify-content-center">
    <div class="col-md-4 col-offset-4 text-center card-form">
      <h2 class="title-add">Inscription</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :first_name,
        autofocus: true,
        input_html: { autocomplete: "First name" }, class: "form-control", placeholder: "First name", label: false%>
        <%= f.input :last_name,
        autofocus: true,
        input_html: { autocomplete: "Last name" }, class: "form-control", placeholder: "Last name", label: false%>
        <%= f.input :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }, class: "form-control", placeholder: "Email", label: false %>
        <%= f.input :password,
        required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password" }, class: "form-control", placeholder: "Mot de passe", label: false %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Inscription", class: "btn btn-success submit" %>
      </div>
      <% end %>
    </div>
  </div>
