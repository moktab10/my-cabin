<div class="row justify-content-center mt-5">
  <div class="col-md-3 col-offset-3 text-center card-form">
    <h2 class="title-add">Espace Client</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" }, class: "form-control", placeholder: "Email", label: false %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" }, class: "form-control", placeholder: "Mot de passe", label: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Connexion", class: "btn btn-success submit" %>
    </div>
    <p class="mt-3">Vous n'avez pas de compte? <%= link_to 'Inscription', new_user_registration_path %></p>
    <% end %>
  </div>
</div>
