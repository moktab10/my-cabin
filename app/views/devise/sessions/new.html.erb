  <div class="row justify-content-center">
    <div class="col-md-4 col-offset-4 text-center card-form">
    <h2 class="title-add">Espace Client</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" }, class: "form-control", placeholder: "Email", label: false %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" }, class: "form-control", placeholder: "Mot de passe", label: false %>
      <%= f.input :remember_me, as: :boolean,label: 'Se souvenir de moi' if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Connexion", class: "btn btn-success submit" %>
    </div>
    <% end %>
  </div>
</div>

