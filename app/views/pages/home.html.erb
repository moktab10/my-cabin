

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1584789663619-8e9d483ec820?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1346&q=80);">
  <div class="container">
    <h1>La référence des <strong>cabanes perchées</strong>!</h1>
    <p>Des centaines de cabanes à découvrir dans toute la France</p>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" placeholder="Loire, Auvergne, Bourgogne ..." type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Rechercher
        </button>
      </div>
    <% end %>
  </div>
</div>


<div class="container text-center mt-5">
  <i>Nos coups de coeur perchés <i class="fas fa-heart mb-5"></i></i>
  <div class="cards">
    <% @cabins.each do |cabin| %>
    <div class="card-trip">
      <div id="carouselExampleControls<%= cabin.id %>" class="carousel slide" data-ride="carousel" data-interval="false">
        <div class="carousel-inner">
          <%= link_to cabin_path(cabin), class: "index-link" do %>
          <% cabin.photos.each do |photo| %>
          <% if photo == cabin.photos.first %>
          <div class="carousel-item active">
            <%= cl_image_tag photo.key, height: 300, width: 350, crop: :fill, class: "d-block w-100" %>
          </div>
          <% else %>
          <div class="carousel-item">
            <%= cl_image_tag photo.key, height: 300, width: 350, crop: :fill, class: "d-block w-100" %>
          </div>
          <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls<%= cabin.id %>" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls<%= cabin.id %>" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="card-trip-infos">
        <div class="text-left">
          <h4 id="green-title"><%= cabin.title.capitalize %></h4>
          <h6><%= cabin.localisation %></h6>
          <h6><%= cabin.beds %> x <i class="fas fa-bed"></i></h6>
        </div>
        <div>
          <h6 class="card-trip-pricing"><%= cabin.price_per_night %> € / <i class="fas fa-moon"></i></h6>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
</div>


  <p class="my-5"><i>Pour vous inspirer ...</i></p>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1464723775205-4af28be57d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1266&q=80)">
    Mer et cocktails
  </div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1509728628963-c39e0e38d32d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1323&q=80)">
    Lac et calme
  </div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1527236767782-6820249d9ea0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80)">
    Nature et randonnées
  </div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1466737006012-747389d9ca92?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80)">
    Montagne et génépi
  </div>
</div>


