<div class="container">
  <div class="container" style="margin: 30px auto">
    <h1><%= @cabin.title %></h1>
  </div>
  <div id="carouselExampleControls<%= @cabin.id %>" class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
      <% @cabin.photos.each do |photo| %>
      <% if photo == @cabin.photos.first %>
      <div class="carousel-item active">
        <%= cl_image_tag photo.key, height: 500, width: 1000, crop: :fill, class: "d-block w-100" %>
      </div>
      <% else %>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, height: 500, width: 1000, crop: :fill, class: "d-block w-100" %>
      </div>
      <% end %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls<%= @cabin.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls<%= @cabin.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<!-- caroussel de photos -->
<div class="container d-flex justify-content-between" style="margin: 100px auto">
  <div class="container d-flex flex-column">
    <div class=" border-bottom border-width: 1px boder-style: solid border-color: black">
      <ul style="list-style-type: none">
        <li><i class="fas fa-ellipsis-h"></i> <%= @cabin.description %></li>
        <li><i class="fas fa-map-marked-alt"></i> <%= @cabin.localisation %></li>
      </ul>
    </div>
    <div class=" border-bottom border-width: 1px boder-style: solid border-color: black">
      <ul style="list-style-type: none">
        <li><i class="far fa-money-bill-alt"></i> <%= @cabin.price_per_night %>€</li>
        <li><i class="fas fa-bed"></i> <%= @cabin.beds %></li>
      </ul>
    </div>
  </div>
  <div class="container d-flex justify-content-center border-radius: 4px" style="box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.15);">
    <div class="d-flex flex-column position: sticky">
      <label for="date_arrivee"><i class="fas fa-plane-arrival"></i> Arivée</label>
      <input type="date" name="arrivée" id="date_arrivee">
    </div>
    <div class="d-flex flex-column">
      <label for="date_depart"><i class="fas fa-plane-departure"></i> Départ</label>
      <input type="date" name="départ" id="date_depart">
    </div>
  </div>
</div>
</div>
