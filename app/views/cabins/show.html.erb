<div class="container-fluid px-0">
  <div id="carouselExampleControls<%= @cabin.id %>" class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
      <% @cabin.photos.each do |photo| %>
      <% if photo == @cabin.photos.first %>
      <div class="carousel-item active">
        <%= cl_image_tag photo.key, class: "d-block w-100 carousel-image" %>
      </div>
      <% else %>
      <div class="carousel-item carousel-image">
        <%= cl_image_tag photo.key, class: "d-block w-100 carousel-image" %>
      </div>
      <% end %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls<%= @cabin.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls<%= @cabin.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div class="container text-success text-center">
  <div style="margin: 30px auto">
    <h1><%= @cabin.title %></h1>
  </div>
</div>
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-12 col-lg-6">
        <div class="text-center"><ul style="list-style-type: none" class="pl-0">
          <li><i class="fas fa-ellipsis-h"></i> <%= @cabin.description %></li>
          <li><i class="far fa-money-bill-alt"></i> <%= @cabin.price_per_night %>€/par nuit</li>
          <li><i class="fas fa-map-marked-alt"></i> <%= @cabin.localisation %></li>
          <li><i class="far fa-money-bill-alt"></i> <%= @cabin.price_per_night %>€/par nuit</li>
          <li><i class="fas fa-bed"></i> <%= @cabin.beds %></li>
        </div>
        <div class="d-flex flex-column position: sticky">
          <label for="date_arrivee"><i class="fas fa-plane-arrival"></i> Arivée</label>
          <input type="date" name="arrivée" id="date_arrivee">
        </div>
        <div class="d-flex flex-column">
          <label for="date_depart"><i class="fas fa-plane-departure"></i> Départ</label>
          <input type="date" name="départ" id="date_depart">
        </div>
        <button type="button" class="btn btn-success" style="margin: 20px auto">Réserver</button>
      </div>
    </div>
  </div>
</div>


